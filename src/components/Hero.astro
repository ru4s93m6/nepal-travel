---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'zh-tw' | 'en';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<section class="relative h-screen w-full overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <img 
      src="/hero.jpg" 
      alt="Himalayan Mountains" 
      class="w-full h-full object-cover"
    />
    <!-- Gradient -->
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative h-full flex flex-col items-center justify-center text-center px-4">
    <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-2xl max-w-4xl">
      {t('home.title')}
    </h1>
    <p class="text-xl md:text-2xl mb-8 text-white/90 drop-shadow-lg max-w-2xl">
      {t('home.subtitle')}
    </p>
    <!-- <button class="bg-amber-500 hover:bg-amber-600 text-white font-semibold px-8 py-4 rounded-lg text-lg transition-all transform hover:scale-105 shadow-xl">
      {t('button.learnMore')}
    </button> -->
  </div>

  <!-- Scroll Down Hint -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce cursor-pointer">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>